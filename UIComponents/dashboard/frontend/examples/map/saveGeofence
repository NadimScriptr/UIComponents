//vehicleId
//bounds
var query = {};
if(request.body != null){
	query = request.body;
}else{
	query = request.parameters.body;
}
if(query != null){
  	try{
    	query = JSON.parse(query);   
    }catch(e){
      	return "INVALID OR MISSING PARAMETER";
    }
}
if(query.vehicleId != null && query.bounds != null){
  var fields = {
      "apsdb.documentKey": "geofence_"+query.vehicleId,
      "bounds": query.bounds,
      "apsdb.store": "Configuration"
  }
  return apsdb.callApi("SaveDocument",fields,null);
} else {
  if(query.vehicleId == null)
  	return "MISSING PARAMETER: vehicleId";
  if(query.bounds == null)
    return  "MISSING PARAMETER: bounds";
}